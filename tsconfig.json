{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["dist"]
}
