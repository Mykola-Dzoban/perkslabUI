{
	"name": "perkslab-ui",
	"description": "PerksLab UI components",
	"version": "0.0.14",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"author": "Mykola Dzoban",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mykola-Dzoban/perkslabUI"
	},
	"bugs": {
		"email": "nick.dzoban@gmail.com"
	},
	"funding": {
		"type": "buy me a coffee",
		"url": "https://www.buymeacoffee.com/nickdzoban"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./components/*": "./src/components/*"
	},
	"scripts": {
		"build:ts": "tsc -p tsconfig.build.json",
		"build:styles": "postcss src/components/styles.css -o dist/components/styles.css",
		"prepublishOnly": "npm run build:ts && npm run build:styles",
		"start": "react-scripts start",
		"build:react": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	},
	"keywords": [
		"react",
		"react-components",
		"tailwindcss",
		"ui-components",
		"component-library",
		"frontend",
		"web-development",
		"design-system",
		"user-interface",
		"npm-package"
	],
	"dependencies": {
		"classnames": "^2.5.1",
		"clsx": "^2.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^2.2.1",
		"tailwindcss": "^3.4.1",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@babel/cli": "^7.23.4",
		"@babel/core": "^7.23.7",
		"@babel/preset-react": "^7.23.3",
		"@tailwindcss/forms": "^0.5.7",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"autoprefixer": "^10.4.17",
		"postcss": "^8.4.33",
		"postcss-cli": "^11.0.0",
		"typescript": "^5.3.3"
	}
}
